// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id         Int       @id @default(autoincrement())
  name       String
  lastName   String
  email      String    @unique
  user       String    @unique
  password   String
  totalRates Int
  totalRated Int
  Booking    Booking[]
  createdAt  DateTime? @default(now())
  updatedAt  DateTime  @default(now())
}

model Services {
  id         Int       @id @default(autoincrement())
  name       String
  price      Float
  time       String
  category   String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
  businessid Int
  business   Business  @relation(fields: [businessid], references: [id])
  booking    Booking[]
}

model Business {
  id         Int        @id @default(autoincrement())
  user       String     @unique
  password   String
  name       String
  adress     String
  totalRates Int
  totalRated Int
  schedule   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
  services   Services[]
  booking    Booking[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  state      String
  date       DateTime
  idClient   Int
  idBusiness Int
  idServices Int
  Client     Client   @relation(fields: [idClient], references: [id])
  Business   Business @relation(fields: [idBusiness], references: [id])
  Services   Services @relation(fields: [idServices], references: [id])
}
